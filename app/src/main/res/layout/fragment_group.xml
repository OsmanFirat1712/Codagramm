<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.groupscreen.GroupFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />


    <EditText
        android:id="@+id/auto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:completionThreshold="1"
        android:hint="Write a Group Name"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/search_design"
        tools:ignore="MissingConstraints"
        android:drawableStart="@drawable/ic_baseline_search_24" />


    <EditText
        android:id="@+id/etCreateGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_design"
        android:hint="Write a Group Name..."
        android:textColorHint="@android:color/white"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_baseline_create_24"
        app:layout_constraintEnd_toStartOf="@id/statusIcon"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@id/searchResult" />

    <ImageView
        android:id="@+id/statusIcon"
        android:src="@drawable/icons8_query_24px"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintTop_toBottomOf="@id/searchResult"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCreateGroup"
        android:layout_width="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/etCreateGroup"
        android:background="@drawable/button_design"
        android:text="Create"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateGroup"
        android:background="@drawable/button_design"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResult"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/auto"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        tools:listitem="@layout/search_items"/>

</androidx.constraintlayout.widget.ConstraintLayout>