<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.loginscreen.RegisterFragment"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />


    <ImageView
        android:id="@+id/ivImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_cloud_upload_24"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lin"
        app:layout_constraintTop_toBottomOf="@id/ivImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft">

        <EditText
            android:id="@+id/dialogFirstName"
            android:background="@drawable/edittext_design"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight"
            app:layout_constraintStart_toEndOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@id/ivImageView"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:hint="FirstName "
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivFirstNameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_info_24"
            app:layout_constraintTop_toBottomOf="@id/ivImageView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        app:layout_constraintTop_toBottomOf="@id/lin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft">

        <EditText
            android:id="@+id/dialogLastName"
            android:background="@drawable/edittext_design"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight"
            app:layout_constraintStart_toEndOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@id/lin"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:hint="LastName "
            android:textColorHint="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivLastNameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_info_24"
            app:layout_constraintTop_toBottomOf="@id/ivImageView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        app:layout_constraintTop_toBottomOf="@id/lin2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft">

        <EditText
            android:id="@+id/dialogNickName"
            android:background="@drawable/edittext_design"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight"
            app:layout_constraintStart_toEndOf="@id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@id/lin2"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="NickName "
            android:layout_weight="1"
            android:textColorHint="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivNickNameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_info_24"
            app:layout_constraintTop_toBottomOf="@id/ivImageView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin4"
        app:layout_constraintTop_toBottomOf="@id/lin3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft">

        <EditText
            android:id="@+id/dialogEmail"
            app:layout_constraintTop_toBottomOf="@id/lin3"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight"
            app:layout_constraintStart_toEndOf="@id/guidelineLeft"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_design"
            android:hint="E-mail address"
            android:layout_weight="1"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivEmailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_info_24"
            app:layout_constraintTop_toBottomOf="@id/ivImageView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin5"
        app:layout_constraintTop_toBottomOf="@id/lin4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft">

        <EditText
            android:id="@+id/dialogPassword"
            app:layout_constraintTop_toBottomOf="@id/lin4"
            android:background="@drawable/edittext_design"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight"
            app:layout_constraintStart_toEndOf="@id/guidelineLeft"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
            android:padding="10dp"
            android:hint="Password "
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:textColorHint="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivPasswordStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_info_24"
            app:layout_constraintTop_toBottomOf="@id/ivImageView" />

    </LinearLayout>


    <View
        android:id="@+id/footer_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/lin5"
        android:background="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnDialogCreate"
        app:layout_constraintTop_toBottomOf="@id/footer_line"
        android:layout_marginTop="1dp"
        android:text="Create Now"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDialogCancel"
        android:layout_marginTop="10dp"
        android:text="Cancel"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnDialogCreate"
        android:layout_gravity="center"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>