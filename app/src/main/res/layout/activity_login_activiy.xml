<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loginscreen.LoginActiviy"
    android:background="@drawable/bg_login">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Codagram"
        android:textSize="30dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_design"
        android:hint="E-mail address"
        android:padding="16dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:background="@drawable/edittext_design"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:layout_marginTop="50dp"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:padding="16dp"
        android:hint="Password "
        android:inputType="numberPassword"
        android:textColorHint="@android:color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:background="@drawable/button_design"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        android:text="Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvForgetPassword"
        android:text="DonÂ´t Remember Password?"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/footer_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/or"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/footer_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword"
        android:background="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/or"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/or"
        android:layout_marginTop="20dp"
        android:text="or"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:textAlignment="center"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNewAccount"
        android:layout_marginTop="20dp"
        android:text="Don`t Have An Account?"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/or"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewAccount"
        android:layout_marginTop="20dp"
        android:text="Create Now"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tvNewAccount"
        app:layout_constraintEnd_toStartOf="@id/guidelineRight"
        app:layout_constraintStart_toEndOf="@id/guidelineLeft"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>